@using ServersManagement.Models

<!-- Modern server card with soft colors and elegant design -->

<div class="card server-card shadow-sm border-0 mb-3">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0 d-flex align-items-center">
            <div class="server-icon me-3">
                <i class="bi bi-server"></i>
            </div>
            <div>
                <div class="server-name">@server.Name</div>
                <div class="server-location">
                    <i class="bi bi-geo-alt me-1"></i>@server.City
                </div>
            </div>
        </h5>
        <div class="status-indicator @(server.IsOnline ? "online" : "offline")">
            <div class="status-dot"></div>
            <span class="status-text">@(server.IsOnline ? "Online" : "Offline")</span>
        </div>
    </div>
    <div class="card-body">
        <div class="server-stats mb-3">
            <div class="stat-item">
                <div class="stat-icon">
                    <i class="bi bi-cpu"></i>
                </div>
                <div class="stat-info">
                    <div class="stat-label">CPU</div>
                    <div class="stat-value">@(server.IsOnline ? "45%" : "N/A")</div>
                </div>
            </div>
            <div class="stat-item">
                <div class="stat-icon">
                    <i class="bi bi-memory"></i>
                </div>
                <div class="stat-info">
                    <div class="stat-label">Memory</div>
                    <div class="stat-value">@(server.IsOnline ? "68%" : "N/A")</div>
                </div>
            </div>
            <div class="stat-item">
                <div class="stat-icon">
                    <i class="bi bi-hdd"></i>
                </div>
                <div class="stat-info">
                    <div class="stat-label">Storage</div>
                    <div class="stat-value">@(server.IsOnline ? "32%" : "N/A")</div>
                </div>
            </div>
        </div>

        <div class="action-buttons">
            <button class="btn btn-action btn-primary-soft">
                <i class="bi bi-gear"></i>
                <span>Manage</span>
            </button>
            <button class="btn btn-action btn-success-soft">
                <i class="bi bi-graph-up"></i>
                <span>Monitor</span>
            </button>
            <button class="btn btn-action btn-info-soft">
                <i class="bi bi-info-circle"></i>
                <span>Details</span>
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter] public Server ServerData { get; set; } = new();

    private Server server => ServerData ?? new Server { Name = "Default Server", City = "Unknown", IsOnline = false };
}
