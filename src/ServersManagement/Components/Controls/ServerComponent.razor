@using ServersManagement.Models

<!-- @serverStatus | @server.Name is implicit razor syntax/expression -->

<div class="card shadow-sm border-0 mb-3">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">
            <i class="bi bi-server me-2"></i>@server.Name
        </h5>
        <span class="badge @(server.IsOnline ? "bg-success" : "bg-danger")">
            @(server.IsOnline ? "ONLINE" : "OFFLINE")
        </span>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="d-flex align-items-center mb-2">
                    <i class="bi bi-geo-alt-fill text-muted me-2"></i>
                    <strong>Location:</strong>
                    <span class="ms-2">@server.City</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="d-flex align-items-center mb-2">
                    <i class="bi bi-activity text-muted me-2"></i>
                    <strong>Status:</strong>
                    <span class="ms-2 @(server.IsOnline ? "text-success" : "text-danger")">
                        @(server.IsOnline ? "Online" : "Offline")
                    </span>
                </div>
            </div>
        </div>
        <div class="mt-3">
            <button class="btn btn-outline-primary btn-sm me-2">
                <i class="bi bi-gear me-1"></i>Manage
            </button>
            <button class="btn btn-outline-secondary btn-sm me-2">
                <i class="bi bi-graph-up me-1"></i>Monitor
            </button>
            <button class="btn btn-outline-info btn-sm">
                <i class="bi bi-info-circle me-1"></i>Details
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter] public Server ServerData { get; set; } = new();

    private Server server => ServerData ?? new Server { Name = "Default Server", City = "Unknown", IsOnline = false };
}
